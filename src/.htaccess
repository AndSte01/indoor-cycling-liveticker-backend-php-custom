SetEnvIf Authorization "(.*)" HTTP_AUTHORIZATION=$1 # add authentication information to header variables

# Headers for Cors
<IfModule mod_headers.c>
    Header add Access-Control-Allow-Origin "*"
    Header add Access-Control-Allow-Headers "origin, content-type, authorization"
    Header add Access-Control-Allow-Methods "PUT, GET, POST, DELETE, OPTIONS"
</IfModule>

# Always return http-status code 200 on OPTIONS Requests
RewriteEngine On                  
RewriteCond %{REQUEST_METHOD} OPTIONS 
RewriteRule ^(.*)$ blank.html [QSA,L]
